<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.Background?>
<?import javafx.scene.layout.BackgroundFill?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>

<VBox maxWidth="250" spacing="10" styleClass="panel-region" stylesheets="/unsw/gloriaromanus/style.css" StackPane.alignment="TOP_LEFT" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="unsw.gloriaromanus.TrainMenuController">
    <padding>
        <Insets topRightBottomLeft="10" />
    </padding>
    <background>
        <Background>
            <fills>
                <BackgroundFill>
                    <fill>
                        <Color opacity="0.3" />
                    </fill>
                </BackgroundFill>
            </fills>
        </Background>
    </background>
   <Label text="Training Details" />
   <TextArea fx:id="output_terminal" prefHeight="200.0" prefWidth="200.0" />
   <Button mnemonicParsing="false" onAction="#trainArtillery" prefHeight="26.0" prefWidth="140.0" text="Artillery" />
   <Button mnemonicParsing="false" onAction="#trainBerserker" prefHeight="26.0" prefWidth="140.0" text="Berserker" />
   <Button mnemonicParsing="false" onAction="#trainChariot" prefHeight="26.0" prefWidth="140.0" text="Chariot" />
   <Button mnemonicParsing="false" onAction="#trainDruid" prefHeight="26.0" prefWidth="140.0" text="Druid" />
   <Button mnemonicParsing="false" onAction="#trainElephants" prefHeight="26.0" prefWidth="140.0" text="Elephants" />
   <Button mnemonicParsing="false" onAction="#trainHorseArcher" prefHeight="26.0" prefWidth="140.0" text="Horse Archer" />
   <Button mnemonicParsing="false" onAction="#trainJavelin" prefHeight="26.0" prefWidth="140.0" text="Javelin Skirmisher" />
   <Button mnemonicParsing="false" onAction="#trainMeleeCavalry" prefHeight="26.0" prefWidth="140.0" text="Melee Cavalry" />
   <Button mnemonicParsing="false" onAction="#trainMissileInfantry" prefHeight="26.0" prefWidth="140.0" text="Missile Infantry" />
   <Button mnemonicParsing="false" onAction="#trainPikemen" prefHeight="26.0" prefWidth="140.0" text="Pikemen" />
   <Button mnemonicParsing="false" onAction="#trainRomanLegionary" prefHeight="26.0" prefWidth="140.0" text="Roman Legionary" />
   <Button mnemonicParsing="false" onAction="#trainSpearmen" prefHeight="26.0" prefWidth="140.0" text="Spearmen" />
   <Button mnemonicParsing="false" onAction="#Cancel1" text="Cancel spot 1" />
   <Button mnemonicParsing="false" onAction="#Cancel2" text="Cancel spot 2" />
    <Button onAction="#Back" text="Back" />
   <Button mnemonicParsing="false" onAction="#EndTurn" text="End Turn" />
</VBox>
