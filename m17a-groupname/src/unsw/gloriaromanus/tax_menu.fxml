<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.Background?>
<?import javafx.scene.layout.BackgroundFill?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>

<VBox maxWidth="250" spacing="10" styleClass="panel-region" stylesheets="/unsw/gloriaromanus/style.css" StackPane.alignment="TOP_LEFT" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="unsw.gloriaromanus.TaxMenuController">
    <padding>
        <Insets topRightBottomLeft="10" />
    </padding>
    <background>
        <Background>
            <fills>
                <BackgroundFill>
                    <fill>
                        <Color opacity="0.3" />
                    </fill>
                </BackgroundFill>
            </fills>
        </Background>
    </background>
    <HBox>
        <VBox />
        <VBox />
    </HBox>
    <VBox>
        <Label text="Province Details" />
        <TextArea id="output_terminal" fx:id="output_terminal" editable="false" text="" />
    </VBox>
   <Button mnemonicParsing="false" onAction="#SetLowTax" prefHeight="26.0" prefWidth="111.0" text="Low Tax" />
   <Button mnemonicParsing="false" onAction="#SetNormalTax" prefHeight="26.0" prefWidth="111.0" text="Normal TAX" />
   <Button mnemonicParsing="false" onAction="#SetHighTax" prefHeight="26.0" prefWidth="110.0" text="High Tax" />
   <Button mnemonicParsing="false" onAction="#SetVeryHighTax" text="Very High Tax" />
   <Button mnemonicParsing="false" onAction="#EndTurn" text="End Turn" />
   <Button mnemonicParsing="false" onAction="#Back" text="Back" />
</VBox>
